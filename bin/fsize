#!/usr/bin/env python3
"""Get the file size and only the file size, because sometimes you want that
without having to pipe through `cut`"""

import os
import sys
import argparse


def make_human_readable(val):
    """Convert a size in bytes to human readable format"""
    val = int(val)
    suffix = ""
    if val >= 2**30:
        val //= 2**30
        suffix = "GiB"
    elif val >= 2**20:
        val //= 2**20
        suffix = "MiB"
    elif val >= 2**10:
        val //= 2**10
        suffix = "KiB"
    return (val, suffix)


def main():
    """Main function"""

    parser = argparse.ArgumentParser(description="Print the file size in bytes")
    parser.add_argument(
        "files", metavar="F", type=str, nargs="+", default=None, help="Target files"
    )
    parser.add_argument(
        "-x",
        "--hexadecimal",
        help="Hexadecimal format",
        action="store_true",
    )
    parser.add_argument(
        "-n",
        "--name",
        help="Print names",
        action="store_true",
    )
    parser.add_argument(
        "-f",
        "--fancy",
        help="Make sizes human-readable",
        action="store_true",
    )

    args = parser.parse_args(sys.argv[1::])

    for file_name in args.files:
        try:
            suffix = ""
            size = os.path.getsize(file_name)
            if args.fancy:
                (size, suffix) = make_human_readable(size)
            if args.hexadecimal:
                line = hex(size)
            else:
                line = str(size)
            line += suffix
            if args.name:
                line += f" {file_name}"
            print(line)
        except FileNotFoundError:
            print(f"Error: No such file '{file_name}'", file=sys.stderr)
            sys.exit(1)


if __name__ == "__main__":
    main()
